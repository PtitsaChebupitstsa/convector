<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@+id/tvCharCode"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCurrencyLogo"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/tvValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="1001231231,999"
            android:textColor="@color/black"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tvCurrencyName"
            app:layout_constraintEnd_toStartOf="@+id/tvNominal"
            app:layout_constraintStart_toEndOf="@+id/ivCurrencyLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCurrencyName"
            android:layout_width="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvNominal"
            app:layout_constraintStart_toEndOf="@+id/ivCurrencyLogo"
            app:layout_constraintTop_toBottomOf="@+id/tvValue"
            tools:text="Российский Рубль" />

        <TextView
            android:id="@+id/tvCharCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="RUB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>